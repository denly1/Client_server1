<Window x:Class="Client_server1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_server1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="allMassage" Grid.Row="0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txt" Grid.Row="1" TextAlignment="Center" Height="100" FontSize="20" />
        <Button Grid.Column="1" Grid.Row="1" Background="Beige" Height="100" Click="Button_Click" />
    </Grid>
</Window>